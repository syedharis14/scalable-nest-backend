{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "target": "ES6",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@prisma/client": ["generated/client"]
        },
        "allowJs": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts", ".eslintrc.js", "prisma/generated/**/*", "prisma/generated/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
