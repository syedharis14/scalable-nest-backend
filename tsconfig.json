{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "target": "ES6",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "allowJs": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts", ".eslintrc.js"],
    "exclude": ["node_modules"]
}
